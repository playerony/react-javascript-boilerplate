{
  "name": "app-shortcut",
  "version": "1.0.0",
  "description": "<app-description>",
  "license": "MIT",
  "author": "<app-author>",
  "repository": "<app-repository>",
  "scripts": {
    "build": "yarn build:clean && yarn build:dist",
    "build:clean": "rimraf dist",
    "build:dist": "yarn webpack --config webpack/webpack.config.js --env mode=production",
    "check": "yarn format:check && yarn lint && yarn commitlint && yarn test && yarn build",
    "commitlint": "commitlint -- --from=main",
    "dev": "yarn webpack serve --config webpack/webpack.config.js --hot --open --port 3030 --env mode=development",
    "docker:build": "docker build -t app-shortcut .",
    "docker:run": "docker run -p 8080:80 app-shortcut",
    "format": "yarn prettier --write \"**/*\"",
    "format:check": "yarn prettier --check \"**/*\"",
    "gcb": "bash ./scripts/git-create-branch.sh",
    "gcmwp": "bash ./scripts/git-checkout-main-with-pull.sh",
    "gpc": "bash ./scripts/git-push-changes.sh",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "yarn lint --fix",
    "open:coverage": "open ./coverage/lcov-report/index.html",
    "prepare": "husky install",
    "reinstall-node-modules": "bash ./scripts/reinstall-node-modules.sh",
    "remove-node-modules": "bash ./scripts/remove-node-modules.sh",
    "test": "jest",
    "test:ci": "yarn test --ci --coverage --forceExit",
    "test:coverage": "yarn test --collectCoverage",
    "test:update-snapshot": "yarn test --updateSnapshot",
    "test:watch": "yarn test --watch",
    "prettier": "prettier",
    "webpack": "webpack"
  },
  "dependencies": {
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": ">=6",
    "jest": "^27.0.6",
    "jest-css-modules-transform": "^4.3.0",
    "jsdom": "^16.7.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.2.1",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "volta": {
    "node": "14.17.4",
    "yarn": "1.22.11"
  }
}
