{
  "name": "react-javascript-boilerplate",
  "version": "1.0.0",
  "description": "Minimal javascript boilerplate for React apps",
  "license": "MIT",
  "author": "Paweł Wojtasiński <pawel.wojtasinski.1995@gmail.com>",
  "repository": "git@github.com:playerony/react-javascript-boilerplate.git",
  "scripts": {
    "build": "yarn build:clean && yarn build:dist",
    "build:clean": "rimraf dist",
    "build:dist": "yarn webpack --env mode=production",
    "check": "yarn prettier:check && yarn lint && yarn commitlint && yarn build",
    "commitlint": "commitlint -- --from=main",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "start": "yarn webpack serve --hot --open --port 3030 --env mode=development",
    "prettier": "prettier",
    "prettier:check": "yarn prettier --check \"**/*\"",
    "prettier:format": "yarn prettier --write \"**/*\"",
    "webpack": "webpack"
  },
  "dependencies": {
    "copy-webpack-plugin": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": ">=6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.2.1",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "volta": {
    "node": "14.17.4",
    "yarn": "1.22.11"
  }
}
